<% layout("/layouts/boilerplate")%>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>Booking Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h4>Booking Successful!</h4>
                        <p>Your booking has been confirmed. Details are below:</p>
                    </div>
                    
                    <h5>Hotel Details</h5>
                    <p>
                        <strong>Hotel:</strong> <%= booking.listing.title %><br>
                        <strong>Location:</strong> <%= booking.listing.location %>, <%= booking.listing.country %>
                    </p>
                    
                    <hr>
                    
                    <h5>Booking Details</h5>
                    <p>
                        <strong>Check-in Date:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %><br>
                        <strong>Check-out Date:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %><br>
                        <strong>Number of Guests:</strong> <%= booking.guests %><br>
                        <strong>Total Amount:</strong> &#8377;<%= booking.totalPrice.toLocaleString('en-IN') %><br>
                        <strong>Booking Status:</strong> 
                        <span class="badge bg-success"><%= booking.status.toUpperCase() %></span>
                    </p>
                    
                    <hr>
                    
                    <div class="d-grid gap-2">
                        <a href="/bookings/my" class="btn btn-primary">View All My Bookings</a>
                        <a href="/listings" class="btn btn-secondary">Browse More Hotels</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
